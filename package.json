{
  "name": "llmem",
  "version": "0.1.0",
  "description": "Personal context store with MCP server for LLM memory",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "mcp": "tsx src/index.ts",
    "mcp:test": "tsx src/index.ts --test",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "vitest run src/**/*.test.ts tests/unit/**/*.test.ts tests/hybrid-search.test.ts",
    "test:integration": "LLMEM_TEST_REAL_CHROMADB=true vitest run tests/integration/**",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "init": "tsx src/scripts/init.ts"
  },
  "keywords": [
    "mcp",
    "llm",
    "memory",
    "context",
    "markdown"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@xenova/transformers": "^2.14.0",
    "chokidar": "^3.6.0",
    "chromadb": "^3.0.10",
    "dotenv": "^17.2.1",
    "gray-matter": "^4.0.3",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "simple-git": "^3.22.0",
    "unified": "^11.0.4",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/node": "^20.11.5",
    "@types/uuid": "^9.0.7",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  }
}
